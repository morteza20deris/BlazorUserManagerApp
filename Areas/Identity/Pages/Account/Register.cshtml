@page
@model RegisterModel

@{
    <div class="h-100">
        <div class="mask d-flex align-items-center h-100">
            <div class="container">
                <div class="row justify-content-center p-5">
                    <div class="col-4">
                        <div class="card shadow-2-strong" style="background-color: #f5f7fa;">
                        <h2 style="margin:auto" class="mt-3">Register</h2>
                            <div class="card-body">

                                <form id="account" method="post">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" placeholder="UserName">
                                        <label asp-for="Input.UserName" class="form-label">UserName</label>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.EmailAddress" class="form-control" autocomplete="email" aria-required="true" placeholder="E-Mail">
                                        <label asp-for="Input.EmailAddress" class="form-label">E-Mail</label>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.Password" class="form-control" autocomplete="password" aria-required="true" placeholder="Password">
                                        <label asp-for="Input.Password" class="form-label"></label>
                                    </div>
                                    <div class="form-floating" style="margin:10px">
                                        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="password" aria-required="true" placeholder="Confirm Password">
                                        <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                                    </div>
                                    <div class="mx-3">
                                        <div>
                                        <label>Register Rules:</label>
                                        </div>
                                        <div>
                                            <label class="text-danger">1. Username Length between 3 and 16</label>
                                        </div>
                                        <div>
                                            <label class="text-danger">1. Password Length between 8 and 16</label>
                                        </div>
                                        <div>
                                            <label class="text-danger">2. Password Must Contain at least one alphabetic character</label>
                                        </div>
                                        <div>
                                            <label class="text-danger">3. Password Must Contain at least one number</label>
                                        </div>
                                        <div>
                                            <label class="text-danger">4. Password Must Contain at least one special character</label>
                                        </div>
                                        
                                    </div>
                                    <div style="margin:10px">
                                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                                    </div>
                                    <div class="form-floating" style="margin:10px">have an account? <a href="/Identity/Account/Login">Login</a></div>
                                </form>
                            </div>
                        </div>      
                    </div>
                </div>
            </div>
        </div>
    </div>

}

